# Configuration de l'application Patron Maker Crochet

# Base de données MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=patron_maker
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# JWT (JSON Web Token)
# Générer une clé secrète forte avec : openssl rand -base64 32
JWT_SECRET=changez_cette_cle_par_une_cle_aleatoire_tres_longue
JWT_EXPIRATION=604800

# Stripe (paiements)
# Clés de test : https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete
STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique
STRIPE_WEBHOOK_SECRET=whsec_votre_secret_webhook

# API d'Intelligence Artificielle
# Choisir Claude (Anthropic) OU OpenAI

# Claude (recommandé pour génération de patrons)
ANTHROPIC_API_KEY=sk-ant-votre_cle_api
AI_PROVIDER=claude

# OU OpenAI
# OPENAI_API_KEY=sk-votre_cle_api
# AI_PROVIDER=openai

# [AI:Claude] Gemini pour génération photos IA (v0.10.0)
